<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/matchCellRL"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:onClick="matchDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:id="@+id/matchCellTV"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Match"/>

    <ImageButton
        android:id="@+id/matchCellBtnUpdate"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/matchCellBtnDelete"
        android:layout_marginStart="20dp"
        android:background="@drawable/custom_button"
        android:src="@drawable/ic_baseline_update_24" />

    <ImageButton
        android:id="@+id/matchCellBtnDelete"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/delete_style_button"
        android:src="@drawable/ic_baseline_delete_24" />

</RelativeLayout>